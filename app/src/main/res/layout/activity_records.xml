<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecordsActivity"
    android:background="@drawable/background_image">

    <ImageView
        android:id="@+id/imgBackResults"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_back"
        android:padding="8dp"
        android:background="@drawable/bg_back_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linear1"
        android:layout_marginBottom="10dp"
        android:text="The best results"
        android:textColor="@color/white"
        android:textSize="40sp"
        />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Place"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:gravity="center"
                android:paddingVertical="10dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Moves"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:gravity="center"
                android:paddingVertical="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_1_place"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:tint="@color/white"
                android:src="@drawable/ic_1_place"
                />
            <TextView
                android:id="@+id/txt_1_place"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                tools:text="62"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:gravity="center"
                android:paddingVertical="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_2_place"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_2_place"
                app:tint="@color/white" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                tools:text="110"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:gravity="center"
                android:id="@+id/txt_2_place"
                android:paddingVertical="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_3_place"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:gravity="center"
                android:paddingVertical="15dp"
                android:src="@drawable/ic_3_place"
                app:tint="@color/white" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                tools:text="160"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:id="@+id/txt_3_place"
                android:gravity="center"
                android:paddingVertical="10dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>